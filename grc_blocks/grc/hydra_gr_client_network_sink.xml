<block>
  <name>HyDRA Client Network Sink</name>
  <key>hydra_gr_network_sink</key>
  <category>[HyDRA]</category>
  <import>import threading</import>
  <import>import hydra</import>
  <make>hydra.hydra_gr_client_network_sink($u_id, $host_addr, $port, $server_addr)
    self.$(id).start_client($center_frequency, $samp_rate, $payload)
</make>
  <param>
    <name>Centre Frequency</name>
    <key>center_frequency</key>
    <type>real</type>
  </param>
  <param>
    <name>Sampling Rate</name>
    <key>samp_rate</key>
    <type>real</type>
  </param>
  <param>
    <name>Virtual Radio ID</name>
    <key>u_id</key>
    <type>int</type>
  </param>
  <param>
    <name>Host IP</name>
    <key>host_addr</key>
    <type>string</type>
  </param>
  <param>
    <name>Port</name>
    <key>port</key>
    <type>int</type>
  </param>
  <param>
    <name>Server IP</name>
    <key>server_addr</key>
    <type>string</type>
  </param>
  <param>
    <name>Payload</name>
    <key>payload</key>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
</block>
